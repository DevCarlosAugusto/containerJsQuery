{
  "name": "container-media-observer",
  "version": "0.1.3",
  "description": "A lightweight JavaScript polyfill to support CSS @container queries in older browsers.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsup src/index.js --format cjs,esm --dts",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DevCarlosAugusto/container-media-polyfill"
  },
  "keywords": [
    "css",
    "polyfill",
    "container-queries",
    "responsive-design",
    "web-components",
    "frontend"
  ],
  "author": "DevCarlosAugusto",
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "prettier": "^3.8.1",
    "eslint": "^10.0.0"
  }
}
